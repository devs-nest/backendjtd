<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titleForPage %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/header') %>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <% if (items.length === 0) { %>
                <tr>
                    <td colspan="3" style="text-align: center;">No items found</td>
                </tr>
            <% } else { %>
                <% items.forEach(item => { %>
                    <tr>
                        <td><%= item.name %></td>
                        <td><%= item.price %></td>
                        <td><%= item.description %></td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>
</body>
</html>